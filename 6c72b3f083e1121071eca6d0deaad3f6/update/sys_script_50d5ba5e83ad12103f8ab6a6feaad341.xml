        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    // Initialize a GlideRecord object for the expense submission table
    var expenseRecord = new GlideRecord('x_876702_expense_m_expense_submission_table');
    
    // Query for the expense record linked to the current approval by matching the expense_id
    expenseRecord.addQuery('sys_id', current.expense_id); // Make sure to use `current.expense_id` correctly
    expenseRecord.query();

    // If an expense record exists
    if (expenseRecord.next()) {
        
        // Get the most recent work note entry from the approval record (current)
        var currentWN = current.work_notes.getJournalEntry(1).trim();

        // Get the current work notes from the expense record
        var existingWorkNotes = expenseRecord.work_notes || "";

        // Check if the current work note is already in the existing work notes
        if (existingWorkNotes.indexOf(currentWN) === -1) {
            // Append the new work note to the existing notes
            expenseRecord.work_notes = existingWorkNotes + (existingWorkNotes ? '\n' : '') + currentWN;
            expenseRecord.update();
        }
    }
})(current, previous);
]]></script>
